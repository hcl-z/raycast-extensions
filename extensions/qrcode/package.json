{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "qrcode",
  "title": "qrcode",
  "description": "qrcode generator & manager",
  "icon": "extension-icon.png",
  "author": "hcl-z",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "generate qrcode",
      "description": "generate qrcode",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "language",
      "type": "dropdown",
      "required": false,
      "title": "Language",
      "description": "Select your preferred language",
      "default": "zh",
      "data": [
        {
          "title": "简体中文",
          "value": "zh"
        },
        {
          "title": "English",
          "value": "en"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.85.2",
    "@raycast/utils": "^1.17.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/qrcode": "^1.5.5",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}